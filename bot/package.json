{
  "name": "flashloan-arbitrage-bot",
  "version": "1.0.0",
  "description": "Flash-Loan Arbitrage Bot for Stellar Soroban ecosystem",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r dotenv/config dist/index.js",
    "dev": "ts-node -r dotenv/config src/index.ts",
    "scanner": "ts-node -r dotenv/config scripts/runScanner.ts",
    "execute": "ts-node -r dotenv/config scripts/executeFlashLoan.ts",
    "simulate": "ts-node -r dotenv/config scripts/simulateArb.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "stellar",
    "soroban",
    "flash-loan",
    "arbitrage",
    "defi",
    "dex"
  ],
  "author": "Flash Loan Team",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui": "^1.45.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@stellar/stellar-sdk": "^11.2.2",
    "@uniswap/sdk-core": "^7.9.0",
    "@uniswap/v2-sdk": "^4.16.0",
    "aptos": "^1.22.1",
    "axios": "^1.6.2",
    "bignumber.js": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
