# Environment Configuration Template
# Copy this file to .env and fill in your values

# Network Configuration
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
HORIZON_URL=https://horizon-testnet.stellar.org
NETWORK_PASSPHRASE=Test SDF Network ; September 2015
IS_TESTNET=true

# Bot Wallet (KEEP SECURE!)
BOT_SECRET_KEY=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
BOT_PUBLIC_KEY=GXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Contract Addresses
FLASH_LOAN_EXECUTOR_CONTRACT=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SOROSWAP_ROUTER=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PHOENIX_ROUTER=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Trading Parameters
MIN_PROFIT_BPS=50
MAX_SLIPPAGE_BPS=100
MIN_LIQUIDITY_USD=10000
MAX_TRADE_SIZE_USD=50000
GAS_PRICE_BUFFER=1.2

# Scanner Configuration
SCAN_INTERVAL_MS=5000
MAX_OPPORTUNITIES=100
OPPORTUNITY_TTL_SECONDS=30
ENABLE_PARALLEL_SCAN=true

# AI Decision Engine
AI_ENABLED=true
AI_RISK_THRESHOLD=30
AI_MIN_SUCCESS_PROB=0.7
AI_ENABLE_ML=false

# Execution Settings
AUTO_EXECUTE=false
MAX_CONCURRENT_EXECUTIONS=3
TX_TIMEOUT_SECONDS=30
MAX_RETRIES=2
RETRY_DELAY_MS=1000

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=./logs/bot.log
ENABLE_METRICS=true

# Safety Features
ENABLE_CIRCUIT_BREAKER=true
MAX_LOSSES_USD=1000
LOSS_WINDOW_HOURS=24
MAX_CONSECUTIVE_FAILURES=5
